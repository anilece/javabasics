import java.util.*;
class SumuptoK{
  public static void main(String[] args){
    Scanner sc=new Scanner(System.in).useDelimiter("[,\\s+]");
    int n=sc.nextInt();
    int k=sc.nextInt();
    int sum=0;
    List<Integer> ints = new ArrayList<>();
	  for (int i = 1; i <= n; i++) {
          ints.add(i);
          }		
    int j=0;
    while (j<=k){
            sum=sum+j;
            j=j+1;
            }
    System.out.println(ints);
    System.out.println(sum);
  }
}
